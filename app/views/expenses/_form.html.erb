<%= form_with(model: expense, local: true) do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="form-group"  style="width: 300px">
      <%= form.label t(:amount) %>
      <%= form.number_field :amount, min: 0, step: 0.1, required: true, class: 'form-control', placeholder: t(:amount_placeholder) %>
    </div>
  </div>

  <div class="form-group" style="width: 300px">
    <%= form.label t(:comment) %>
    <%= form.text_field :comment, class: 'form-control', placeholder: t(:comment_placeholder) %>
  </div>

  <div class="form-group">
    <%= form.label t(:expense_date) %>
    <br />
    <%= form.date_select :expense_time %>
  </div>

  <div class="form-group"  style="width: 200px">
    <%= form.label t(:category) %>
    <%= form.collection_select :category_id, Category.all, :id, :category_name, {}, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit (t :add_expense), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
