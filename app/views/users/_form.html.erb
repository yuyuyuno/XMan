<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="width: 250px">
    <%= form.label :username %>
    <%= form.text_field :username, class: 'form-control', placeholder: t(:username_placeholder) %>
  </div>

  <div class="form-group" style="width: 250px">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class: 'form-control', placeholder: t(:pw_placeholder) %>
  </div>

  <div class="form-group" style="width: 250px">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true, class: 'form-control', placeholder: t(:pw_conf_placeholder) %>
  </div>

  <div class="actions">
    <%= form.submit t('create'), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
